<CameraScreen>:
    GridLayout:
        cols: 1
        Camera:
            id: camera
            resolution: (640, 480)
            play: False
        Button:
            text: "Start Camera" if root.ids.camera.play == False else "Stop Camera"
            on_press: root.start() if root.ids.camera.play == False else root.stop()
        Button:
            text: "Capture"
            on_press: root.capture()

<ImageScreen>:
    GridLayout:
        cols: 1
        Image:
            id: img
        Button:
            text: "Create a sharable link"
            on_press: root.create_link()
        Label:
            id: link
            text: ""
        GridLayout:
            cols: 2
            Button:
                text: "Copy Link"
                on_press: root.copy_link()
            Button:
                text: "Open Link"
                on_press: root.open_link()


<RootWidget>:
    CameraScreen:
        id: camera_screen
        name: "camera_screen"
    ImageScreen:
        id: image_screen
        name: "image_screen"
